doctype html
html
  head
    title Trex Status
    link(rel="icon", href="/favicon.ico" type="image/x-icon")
    style.
      body {
        font-family: 'Segoe UI', sans-serif;
        background: #121212;
        color: #fff;
        text-align: center;
        padding-top: 5%;
      }
      .container {
        background: #1e1e1e;
        border-radius: 15px;
        padding: 2rem;
        width: 50%;
        margin: auto;
        box-shadow: 0 0 20px rgba(0,0,0,0.5);
      }
      h1, h2, p {
        margin: 0.5rem 0;
      }
  body
    .container
      h1 T-Rex Bot
      h2 Status: #{status}
      p Uptime: #{uptime}
      p Comandos ativos: #{commands}
